<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SampleButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/min_height_btn_36dp</item>
        <item name="android:background">@drawable/update_button_ripple</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/update_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="MaterialButton">
        <item name="android:backgroundTint">@color/new_playlist_button_color</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/create</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/deep_white</item>
        <item name="cornerRadius">@dimen/corner_radius_8dp</item>
    </style>

    <style name="TabLayoutLibrary" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/general_background_color</item>
        <item name="tabIndicatorColor">?attr/toolbar_text_color</item>
        <item name="tabTextColor">?attr/toolbar_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="CustomNavigationView">
        <item name="android:background">?attr/general_background_color</item>
        <item name="itemIconTint">@color/menu_color</item>
        <item name="itemTextColor">@color/menu_color</item>
    </style>

    <style name="BottomNavigationText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <!--Input field style-->
    <style name="PlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?attr/toolbar_text_color</item>
        <item name="android:textColorHint">?attr/toolbar_text_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_4dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_4dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_4dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_4dp</item>
        <item name="boxStrokeColor">@color/new_playlist_edittext_color</item>
        <item name="boxStrokeWidth">@dimen/stroke_width_1dp</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_width_1dp</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/general_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>

        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="YSMedium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/toolbar_text_color</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>

    <style name="YSMedium19">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/toolbar_text_color</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
    </style>

    <style name="YSMedium16">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/toolbar_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="YSMedium14">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/toolbar_text_color</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="YSRegular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/general_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="YSRegular13">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/yp_text_grey_color</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="YSRegular12">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/toolbar_text_color</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="YSRegular11">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/general_icon_color</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

    <!-- bottom sheet style-->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_16dp</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>