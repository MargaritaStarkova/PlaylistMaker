<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_playlist_menu_color"
    android:orientation="vertical"
    tools:context=".playlist_menu.ui.fragment.PlaylistMenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_playlist_menu_color">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_cover_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.47" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_description_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.48" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_description_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />


        <ImageView
            android:id="@+id/playlist_cover_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/cover"
            android:src="@drawable/placeholder"
            app:layout_constrainedWidth="true"

            app:layout_constraintBottom_toTopOf="@id/bottom_cover_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:ignore="ImageContrastCheck" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/navigation_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/black" />

        <TextView
            android:id="@+id/playlist_name"
            style="@style/YSMedium24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"

            app:layout_constraintBottom_toTopOf="@id/playlist_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/top_description_guideline"

            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="spread_inside"

            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/playlist_description"
            style="@style/YSRegular18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:maxLines="1"

            app:layout_constraintBottom_toTopOf="@id/playlist_duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_name"

            tools:text="2022" />

        <TextView
            android:id="@+id/playlist_duration"
            style="@style/YSRegular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"

            android:drawablePadding="@dimen/margin_10dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            app:drawableEndCompat="@drawable/ic_dot_black"

            app:layout_constraintBottom_toTopOf="@id/ic_share"
            app:layout_constraintEnd_toStartOf="@id/playlist_tracks_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_description"

            tools:ignore="TextContrastCheck"
            tools:text="300 минут" />

        <TextView
            android:id="@+id/playlist_tracks_count"
            style="@style/YSRegular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"

            app:layout_constraintStart_toEndOf="@+id/playlist_duration"
            app:layout_constraintTop_toTopOf="@id/playlist_duration"
            tools:ignore="TextContrastCheck"
            tools:text="98 треков" />

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:contentDescription="@string/ic_share"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="@id/bottom_description_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_duration"
            app:tint="?attr/expression_text_color" />

        <ImageView
            android:id="@+id/ic_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:contentDescription="@string/ic_more"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more"
            app:layout_constraintBottom_toBottomOf="@id/bottom_description_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/ic_share"

            app:layout_constraintTop_toTopOf="@id/ic_share"
            app:tint="?attr/expression_text_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_track_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_13dp"
        android:paddingEnd="@dimen/margin_12dp"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="@dimen/rounder_w_50dp"
            android:layout_height="@dimen/rounder_h_4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_8dp"
            android:background="@drawable/rounder" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/track_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="gone"
            tools:itemCount="5"
            tools:listitem="@layout/item_view_track" />

        <ImageView
            android:id="@+id/placeholder_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/error_search"/>

        <TextView
            android:id="@id/placeholder_message"
            style="@style/YSRegular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="@string/nothing_added"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
