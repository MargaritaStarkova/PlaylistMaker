<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:elevation="@dimen/margin_8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/corner_radius_8dp">

    <ImageView
        android:id="@+id/ivPlaylistCover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_160dp"
        android:contentDescription="@string/cover"
        android:src="@drawable/aa6f6c3dc30d3035cdfbb8f5ff83f863"
        tools:ignore="ImageContrastCheck" />


    <TextView
        android:id="@+id/tvPlaylistName"
        style="@style/YSRegular12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginEnd="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_164dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Smells Like Teen Spirit" />


    <TextView
        android:id="@+id/tvTracksCount"
        style="@style/YSRegular12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginEnd="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_180dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="98 треков" />
</androidx.cardview.widget.CardView>